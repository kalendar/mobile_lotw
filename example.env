# Key to encode session information. Variable length accepted.
MOBILE_LOTW_SECRET_KEY = "REPLACE ME"

# Key to encode sensitive DB information. *Must be 16 characters long.*
MOBILE_LOTW_DB_KEY = "REPLACE ME"

# Database connection url.
DB_URL = "REPLACE ME"

# Time in minutes before expiring cached information.
SESSION_CACHE_EXPIRATION = 30

# Timeout for outbound requests to lotw.arrl.org in seconds.
LOTW_REQUEST_TIMEOUT_SECONDS = 20

# Set to 1/true in production behind HTTPS.
MOBILE_LOTW_SECURE_COOKIES = 0

# Number of background workers for QSO imports.
QSO_IMPORT_MAX_WORKERS = 2

# Enable paid entitlement enforcement.
REQUIRE_ACTIVE_SUBSCRIPTION = 0

# Deploy webhook settings (optional, recommended over API key).
DEPLOY_WEBHOOK_SECRET = "REPLACE ME"
DEPLOY_ALLOWED_IPS = ""

# Stripe billing settings (optional until billing launch).
STRIPE_SECRET_KEY = "REPLACE ME"
STRIPE_WEBHOOK_SECRET = "REPLACE ME"
STRIPE_PRICE_ID_MONTHLY = "REPLACE ME"
STRIPE_PRICE_ID_ANNUAL = "REPLACE ME"
# Backwards compatibility fallback if monthly env var is not set.
STRIPE_PRICE_ID = ""

# QSL digest notifications feature flags.
DIGEST_NOTIFICATIONS_ENABLED = 1
WEB_PUSH_ENABLED = 1
DIGEST_EMAIL_ENABLED = 1
DIGEST_DRY_RUN = 0

# Web push (VAPID) settings.
WEB_PUSH_VAPID_PUBLIC_KEY = ""
WEB_PUSH_VAPID_PRIVATE_KEY = ""
WEB_PUSH_VAPID_SUBJECT = "mailto:info@mobilelotw.org"

# Digest URL and SMTP fallback email.
DIGEST_BASE_URL = "https://mobilelotw.org"
DIGEST_SMTP_HOST = ""
DIGEST_SMTP_PORT = 587
DIGEST_SMTP_USERNAME = ""
DIGEST_SMTP_PASSWORD = ""
DIGEST_SMTP_FROM_EMAIL = "info@mobilelotw.org"
DIGEST_SMTP_STARTTLS = 1
